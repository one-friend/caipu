view {
  box-sizing: border-box;
  border: 0;
  margin: 0;
}
.container {
  /* padding-top: 30rpx; */
  width: 100%;
  height: 100vh;
  background-color: #fff;
}

.list-item {
  position: relative;
  font-size: 30rpx;
  margin: 0rpx auto 30rpx;
  padding-left: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 200rpx;
  width: 95%;
  background-color: cornflowerblue;
  border-radius: 10rpx;
}

.item-button {
  position: absolute;
  right: 0;
  top: 0;
}

.item-button image {
  width: 50rpx;
  height: 50rpx;
}

.item-icon {
  margin-right: 40rpx;
  width: 80rpx;
  height: 80rpx;
}

.item-name {
  font-size: 34rpx;
  font-weight: 500;
  font-family: serif;
  width: 50%;
}

.add-button {
  position: fixed;
  left: calc(50% - 65rpx);
  bottom: 10%;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background-color: cornflowerblue;
}

.add-button image {
  width: 100%;
  height: 100%;
}